# Application Configuration
# -----------------------
# Application name used throughout the frontend
VITE_APP_NAME=Web Scraping Platform

# API Configuration
# ----------------
# Base URL for backend API endpoints (e.g., https://api.example.com)
VITE_API_URL=http://localhost:8000
# API version for endpoint versioning (e.g., v1)
VITE_API_VERSION=v1
# API request timeout in milliseconds (default: 30000)
VITE_API_TIMEOUT=30000

# Authentication Configuration (Auth0)
# ----------------------------------
# Auth0 domain for authentication (e.g., your-tenant.auth0.com)
VITE_AUTH_DOMAIN=your-tenant.auth0.com
# Auth0 client ID for authentication (format: alphanumeric string)
VITE_AUTH_CLIENT_ID=your-client-id
# Auth0 API audience identifier (format: URL or unique identifier)
VITE_AUTH_AUDIENCE=https://api.example.com

# WebSocket Configuration
# ----------------------
# WebSocket server URL for real-time updates (e.g., wss://ws.example.com)
VITE_WEBSOCKET_URL=ws://localhost:8001

# Error Tracking & Monitoring
# --------------------------
# Sentry DSN for error tracking and monitoring (format: https://xxx@xxx.ingest.sentry.io/xxx)
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io/project-id

# Environment Configuration
# ------------------------
# Application environment (values: development, staging, production)
VITE_ENVIRONMENT=development

# Security Settings
# ----------------
# Enable strict CORS policy (recommended for production)
VITE_STRICT_CORS=true
# Enable content security policy
VITE_ENABLE_CSP=true
# Enable HTTP strict transport security
VITE_ENABLE_HSTS=true

# Feature Flags
# ------------
# Enable real-time updates via WebSocket
VITE_ENABLE_REALTIME=true
# Enable error tracking and monitoring
VITE_ENABLE_ERROR_TRACKING=true
# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
# ------------
# Maximum API requests per minute
VITE_API_RATE_LIMIT=1000
# Burst limit for API requests
VITE_API_BURST_LIMIT=50

# Logging & Debugging
# ------------------
# Log level (debug, info, warn, error)
VITE_LOG_LEVEL=info
# Enable debug mode (development only)
VITE_DEBUG_MODE=false

# Cache Configuration
# ------------------
# Cache TTL in seconds
VITE_CACHE_TTL=3600
# Maximum cache size in MB
VITE_MAX_CACHE_SIZE=50